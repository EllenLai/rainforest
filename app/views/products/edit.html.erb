<h1>Edit Product</h1>

<p>
  <%= link_to "Back", @product %>
</p>

<%= form_for @product do |f| %>
  <p>
    <%= f.label "name" %><br>
    <%= f.text_field "name" %>
  </p>
  <p>
    <%= f.label "desciption" %><br>
    <%= f.text_field "description" %>
  </p>
  <p>
    <%= f.label "price in cents" %><br>
    <%= f.text_field "price_in_cents" %>
  </p>
  <p>
    <%= submit_tag "Submit" %>
  </p>
<% end %>